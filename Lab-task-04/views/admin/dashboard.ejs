<% layout('layouts/admin-layout') -%>
<%
    currentPage = 'dashboard';
    headerTitle = 'Dashboard';
    headerIcon = 'speedometer2';
%>

<div class="row">
    <div class="col-md-3">
        <div class="stat-card bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-uppercase">Total Products</h6>
                    <h2 class="mb-0"><%= stats.totalProducts || 0 %></h2>
                </div>
                <i class="bi bi-box-seam" style="font-size: 2rem;"></i>
            </div>
            <small>All time products</small>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card bg-success text-white">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-uppercase">In Stock</h6>
                    <h2 class="mb-0"><%= stats.inStock || 0 %></h2>
                </div>
                <i class="bi bi-check-circle" style="font-size: 2rem;"></i>
            </div>
            <small>Available products</small>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card bg-warning text-dark">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-uppercase">Out of Stock</h6>
                    <h2 class="mb-0"><%= stats.outOfStock || 0 %></h2>
                </div>
                <i class="bi bi-exclamation-circle" style="font-size: 2rem;"></i>
            </div>
            <small>Need restocking</small>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card bg-info text-white">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-uppercase">Featured</h6>
                    <h2 class="mb-0"><%= stats.featured || 0 %></h2>
                </div>
                <i class="bi bi-star" style="font-size: 2rem;"></i>
            </div>
            <small>Featured products</small>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Products</h5>
            </div>
            <div class="card-body">
                <% if (recentProducts && recentProducts.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Stock</th>
                                    <th>Added</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% recentProducts.forEach(product => { %>
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="/uploads/<%= product.image || 'default-product.jpg' %>" 
                                                     class="product-img me-2" 
                                                     alt="<%= product.name %>">
                                                <div>
                                                    <strong><%= product.name %></strong><br>
                                                    <small class="text-muted"><%= product.category %></small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>$<%= product.price.toFixed(2) %></td>
                                        <td>
                                            <% if (product.stock > 10) { %>
                                                <span class="badge bg-success">In Stock</span>
                                            <% } else if (product.stock > 0) { %>
                                                <span class="badge bg-warning">Low Stock</span>
                                            <% } else { %>
                                                <span class="badge bg-danger">Out of Stock</span>
                                            <% } %>
                                        </td>
                                        <td><%= new Date(product.createdAt).toLocaleDateString() %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="bi bi-box" style="font-size: 3rem; color: #ccc;"></i>
                        <p class="text-muted mt-2">No products yet</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-lightning"></i> Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/admin/products/add" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add New Product
                    </a>
                    <a href="/admin/products" class="btn btn-outline-secondary">
                        <i class="bi bi-list"></i> View All Products
                    </a>
                    <button class="btn btn-outline-info">
                        <i class="bi bi-bar-chart"></i> View Reports
                    </button>
                    <button class="btn btn-outline-warning">
                        <i class="bi bi-gear"></i> Settings
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>