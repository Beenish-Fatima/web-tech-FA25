<% layout('layouts/admin-layout') -%>
<%
    currentPage = 'products';
    headerTitle = 'View Product';
    headerIcon = 'eye';
%>

<div class="row">
    <div class="col-lg-10 mx-auto">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Product Details</h5>
                <div>
                    <a href="/admin/products/edit/<%= product._id %>" class="btn btn-primary btn-sm">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <button onclick="confirmDelete('<%= product._id %>', '<%= product.name %>')" 
                            class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <form id="delete-form-<%= product._id %>" 
                          action="/admin/products/delete/<%= product._id %>" 
                          method="POST" 
                          style="display: none;">
                        <input type="hidden" name="_method" value="DELETE">
                    </form>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <img src="/uploads/<%= product.image || 'default-product.jpg' %>" 
                             alt="<%= product.name %>" 
                             class="img-fluid rounded" 
                             style="max-height: 300px;">
                    </div>
                    <div class="col-md-8">
                        <h2><%= product.name %></h2>
                        <p class="text-muted"><%= product.description %></p>
                        
                        <div class="row mt-4">
                            <div class="col-md-6">
                                <h6>Product Information</h6>
                                <table class="table table-sm">
                                    <tr>
                                        <td><strong>Category:</strong></td>
                                        <td><span class="badge bg-info"><%= product.category %></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Price:</strong></td>
                                        <td>
                                            <span class="h5 text-primary">$<%= product.price.toFixed(2) %></span>
                                            <% if (product.discount > 0) { %>
                                                <span class="text-danger ms-2">-<%= product.discount %>%</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Stock:</strong></td>
                                        <td>
                                            <span class="<%= product.stock > 10 ? 'text-success' : product.stock > 0 ? 'text-warning' : 'text-danger' %>">
                                                <%= product.stock %> units
                                            </span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <h6>Additional Details</h6>
                                <table class="table table-sm">
                                    <tr>
                                        <td><strong>Status:</strong></td>
                                        <td>
                                            <% if (product.featured) { %>
                                                <span class="badge bg-warning">Featured</span>
                                            <% } %>
                                            <% if (product.stock > 10) { %>
                                                <span class="badge bg-success">In Stock</span>
                                            <% } else if (product.stock > 0) { %>
                                                <span class="badge bg-warning">Low Stock</span>
                                            <% } else { %>
                                                <span class="badge bg-danger">Out of Stock</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Created:</strong></td>
                                        <td><%= new Date(product.createdAt).toLocaleString() %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Last Updated:</strong></td>
                                        <td><%= new Date(product.updatedAt).toLocaleString() %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Product ID:</strong></td>
                                        <td><small class="text-muted"><%= product._id %></small></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="mt-4 pt-4 border-top">
                    <a href="/admin/products" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Products
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>