<%- include('partials/header') %>

<!-- Hero Section -->
<section class="page-hero">
    <div class="container">
        <h1>Our Services</h1>
        <p>Comprehensive digital solutions tailored to your business needs</p>
    </div>
</section>

<!-- Services List -->
<section class="section services-list">
    <div class="container">
        <% services.forEach(service => { %>
        <div class="service-item">
            <div class="service-item-image">
                <img src="<%= service.image %>" alt="<%= service.title %>">
            </div>
            <div class="service-item-content">
                <h2><%= service.title %></h2>
                <p><%= service.description %></p>
                <ul class="service-features">
                    <% if(service.id === 1) { %>
                        <li><i class="fas fa-check"></i> Responsive Design</li>
                        <li><i class="fas fa-check"></i> UI/UX Optimization</li>
                        <li><i class="fas fa-check"></i> Brand Identity</li>
                        <li><i class="fas fa-check"></i> Wireframing & Prototyping</li>
                    <% } else if(service.id === 2) { %>
                        <li><i class="fas fa-check"></i> Full-Stack Development</li>
                        <li><i class="fas fa-check"></i> E-commerce Solutions</li>
                        <li><i class="fas fa-check"></i> API Integration</li>
                        <li><i class="fas fa-check"></i> Performance Optimization</li>
                    <% } else { %>
                        <li><i class="fas fa-check"></i> SEO Strategy</li>
                        <li><i class="fas fa-check"></i> Social Media Marketing</li>
                        <li><i class="fas fa-check"></i> Content Creation</li>
                        <li><i class="fas fa-check"></i> Analytics & Reporting</li>
                    <% } %>
                </ul>
                <a href="/contact" class="btn btn-primary">Get This Service</a>
            </div>
        </div>
        <% }); %>
    </div>
</section>

<!-- Process Section -->
<section class="section process-section">
    <div class="container">
        <h2 class="section-title">Our Process</h2>
        <div class="process-steps">
            <div class="process-step">
                <div class="step-number">1</div>
                <h3>Discovery</h3>
                <p>We understand your goals and requirements</p>
            </div>
            <div class="process-step">
                <div class="step-number">2</div>
                <h3>Planning</h3>
                <p>We create a detailed project roadmap</p>
            </div>
            <div class="process-step">
                <div class="step-number">3</div>
                <h3>Execution</h3>
                <p>We build your solution with precision</p>
            </div>
            <div class="process-step">
                <div class="step-number">4</div>
                <h3>Launch & Support</h3>
                <p>We deploy and provide ongoing support</p>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer') %>