<%- include('partials/header') %>

<main class="container">
    <h1><i class="fas fa-shopping-cart"></i> Shopping Cart</h1>
    
    <!-- Messages - SAFER VERSION -->
    <% 
        // Safely check for message
        let displayMessage = null;
        if (typeof message !== 'undefined' && message !== null && message.text) {
            displayMessage = message;
        }
    %>
    
    <% if (displayMessage) { %>
        <div class="alert alert-<%= displayMessage.type === 'error' ? 'danger' : displayMessage.type === 'warning' ? 'warning' : 'success' %>">
            <i class="fas fa-<%= displayMessage.type === 'error' ? 'exclamation-circle' : displayMessage.type === 'warning' ? 'exclamation-triangle' : 'check-circle' %>"></i>
            <%= displayMessage.text %>
        </div>
    <% } %>
    
    <% if (!cartItems || cartItems.length === 0) { %>
        <div class="empty-cart text-center py-5">
            <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
            <h3>Your cart is empty</h3>
            <p class="text-muted">Add some products to get started!</p>
            <a href="/products" class="btn btn-primary btn-lg">
                <i class="fas fa-shopping-bag"></i> Continue Shopping
            </a>
        </div>
    <% } else { %>
        <div class="row">
            <div class="col-md-8">
                <div class="cart-items">
                    <% cartItems.forEach(item => { %>
                        <div class="cart-item card mb-3">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-md-2">
                                        <img src="<%= item.image || 'https://images.unsplash.com/photo-1552664730-d307ca884978?auto=format&fit=crop&w=800&q=60' %>" 
                                             alt="<%= item.productName %>" 
                                             class="img-fluid rounded">
                                    </div>
                                    <div class="col-md-4">
                                        <h5 class="card-title"><%= item.productName %></h5>
                                        <p class="text-muted mb-0">Price: $<%= (parseFloat(item.price) || 0).toFixed(2) %></p>
                                        <small class="text-muted">ID: <%= item.productId %></small>
                                    </div>
                                    <div class="col-md-3">
                                        <form action="/products/cart/update" method="POST" class="d-flex align-items-center">
                                            <input type="hidden" name="productId" value="<%= item.productId %>">
                                            <input type="number" 
                                                   name="quantity" 
                                                   value="<%= item.quantity || 1 %>" 
                                                   min="1" 
                                                   max="10" 
                                                   class="form-control form-control-sm me-2"
                                                   style="width: 80px;">
                                            <button type="submit" class="btn btn-sm btn-outline-primary">
                                                Update
                                            </button>
                                        </form>
                                    </div>
                                    <div class="col-md-2">
                                        <h6 class="mb-0">$<%= ((parseFloat(item.price) || 0) * (parseInt(item.quantity) || 1)).toFixed(2) %></h6>
                                    </div>
                                    <div class="col-md-1">
                                        <form action="/products/cart/remove/<%= item.productId %>" method="POST">
                                            <button type="submit" class="btn btn-sm btn-danger" title="Remove">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="cart-summary card">
                    <div class="card-header">
                        <h4 class="mb-0">Order Summary</h4>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span>$<%= cartTotal.toFixed(2) %></span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping:</span>
                            <span>$0.00</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tax:</span>
                            <span>$0.00</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total:</strong>
                            <strong>$<%= cartTotal.toFixed(2) %></strong>
                        </div>
                        
                        <a href="/products/checkout" class="btn btn-primary btn-lg w-100 mb-2">
                            <i class="fas fa-credit-card"></i> Proceed to Checkout
                        </a>
                        <a href="/products" class="btn btn-outline-secondary w-100">
                            <i class="fas fa-shopping-bag"></i> Continue Shopping
                        </a>
                    </div>
                </div>
                
                <div class="card mt-3">
                    <div class="card-body">
                        <h6><i class="fas fa-info-circle"></i> Cart Information</h6>
                        <ul class="small text-muted mb-2">
                            <li>Items in cart: <strong><%= cartCount %></strong></li>
                            <li>Total items: <strong><%= cartItems.length %></strong></li>
                            <li>Free shipping on all orders</li>
                            <li>No tax applied</li>
                        </ul>
                        <a href="/contact" class="btn btn-sm btn-outline-primary w-100">Need Help?</a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</main>

<style>
.empty-cart {
    background: #f8f9fa;
    border-radius: 10px;
    padding: 60px 20px;
}

.cart-item {
    transition: transform 0.2s;
}

.cart-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

.alert {
    padding: 12px 20px;
    border-radius: 8px;
    margin-bottom: 20px;
    border: 1px solid transparent;
}

.alert-success {
    background-color: #d4edda;
    border-color: #c3e6cb;
    color: #155724;
}

.alert-danger {
    background-color: #f8d7da;
    border-color: #f5c6cb;
    color: #721c24;
}

.alert-warning {
    background-color: #fff3cd;
    border-color: #ffeaa7;
    color: #856404;
}

.alert i {
    margin-right: 8px;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .cart-item .row > div {
        margin-bottom: 10px;
    }
    .cart-item .row > div:last-child {
        margin-bottom: 0;
    }
}
</style>

<%- include('partials/footer') %>