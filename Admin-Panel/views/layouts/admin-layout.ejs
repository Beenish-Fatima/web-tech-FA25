<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - <%- title || 'Dashboard' %></title>
    <link rel="stylesheet" href="/admin-style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <h2><i class="fas fa-cog"></i> Admin Panel</h2>
            </div>
            <nav class="sidebar-nav">
                <a href="/admin" class="nav-link <%= currentPage === 'dashboard' ? 'active' : '' %>">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
                <a href="/admin/products" class="nav-link <%= currentPage === 'products' ? 'active' : '' %>">
                    <i class="fas fa-box"></i> Products
                </a>
                <a href="/admin/products/add" class="nav-link <%= currentPage === 'add-product' ? 'active' : '' %>">
                    <i class="fas fa-plus-circle"></i> Add Product
                </a>
                <a href="/" class="nav-link" target="_blank">
                    <i class="fas fa-store"></i> View Store
                </a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <header class="main-header">
                <h1><%- title || 'Dashboard' %></h1>
                <div class="user-info">
                    <span>Admin User</span>
                </div>
            </header>
            
            <div class="content">
                <%- include(`../admin/${viewName}`, { title: title, currentPage: currentPage }); %>
            </div>
        </div>
    </div>

    <script>
        // Simple script for active link highlighting
        document.addEventListener('DOMContentLoaded', function() {
            const path = window.location.pathname;
            let currentPage = 'dashboard';
            
            if (path.includes('/products/add')) currentPage = 'add-product';
            else if (path.includes('/products/edit')) currentPage = 'products';
            else if (path.includes('/products')) currentPage = 'products';
            
            document.querySelectorAll('.nav-link').forEach(link => {
                if (link.href.includes(currentPage)) {
                    link.classList.add('active');
                }
            });
        });
    </script>
</body>
</html>